<Page
    x:Class="Lumina.Views.Pages.FeaturesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lumina.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Lumina.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:FeaturesPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Global Toggle" Margin="0,0,219,361" />

        <ui:Button Name="GlobalToggle" Height="32" Content="Start" Margin="204,40,0,0" VerticalAlignment="Top" Width="78" Click="GlobalToggle_Click"/>
        <TextBlock
            FontSize="15"
            FontWeight="Regular"
            Foreground="#abadaf"
            Text="This will start all true features" Margin="1,43,354,311" />
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Auto Collect" Margin="1,106,218,256" />
        <ui:Button Height="32" x:Name="AutoCollectToggle" Content="false" Margin="149,144,0,0" VerticalAlignment="Top" Width="78" Click="Button_Click_1"/>
        <TextBlock
            FontSize="15"
            FontWeight="Regular"
            Foreground="#abadaf"
            Text="Collect all item spots" Margin="0,148,404,207" />
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Auto Craft" Margin="1,195,218,167" />
        <ui:Button Height="32" x:Name="AutoCraftGilded" Content="false" Margin="167,234,0,0" Width="78" Click="Button_Click_2" VerticalAlignment="Top"/>
        <TextBlock
            FontSize="15"
            FontWeight="Regular"
            Foreground="#abadaf"
            Text="Auto Craft Gilded Coins" Margin="0,237,386,118" />

    </Grid>
</Page>
