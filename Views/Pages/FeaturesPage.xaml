<Page
    x:Class="Lumina.Views.Pages.FeaturesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lumina.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Lumina.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:FeaturesPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Width="600" Height="500">
            <Border CornerRadius="10"
                    BorderBrush="#414041" BorderThickness="1"
            Margin="0,0,0,0" Width="600">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Transparent" Offset="0.1"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry 
                    RadiusX="10"
                    RadiusY="10"
                    Rect="0,0,600,115"/>
                </Border.Clip>


                <Grid>

                    <ui:Button
                    Margin="502,0,0,0"
                    Name="GlobalToggle" VerticalAlignment="Center" BorderBrush="#414041" Background="#002D2D2D" Height="32" Content="Start" Width="78" Click="GlobalToggle_Click" RenderTransformOrigin="0.235,0.438"/>
                    <TextBlock Text="Global Toggle"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,14,0,37"
                           FontSize="18"/>

                    <TextBlock
                    FontSize="15"
                    FontWeight="Regular"
                    Foreground="#a5a8ab"
                    Height="20"
                    VerticalAlignment="Top"
                    Margin="20,40,101,0"
                    Text="This will start all true features" />
                </Grid>

            </Border>


            <Border CornerRadius="10"
            BorderBrush="#414041" BorderThickness="1"
    Margin="0,10,0,0" Width="600">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Transparent" Offset="0.1"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry 
            RadiusX="10"
            RadiusY="10"
            Rect="0,0,600,115"/>
                </Border.Clip>


                <Grid>

                    <ui:Button
                        Margin="502,0,0,0"
                        Name="AutoCollectBtn" Content="Off" VerticalAlignment="Center" BorderBrush="#414041" Background="#002D2D2D" Height="32" Width="78" Click="AutoCollect_Click" RenderTransformOrigin="0.235,0.438"/>
                    <TextBlock Text="Auto Collect"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="20,14,0,37"
                   FontSize="18"/>

                    <TextBlock
            FontSize="15"
            FontWeight="Regular"
            Foreground="#a5a8ab"
            Height="20"
            VerticalAlignment="Top"
            Margin="20,40,101,0"
            Text="This will turn Auto Collect on" />
                </Grid>

            </Border>
        </StackPanel>
    </Grid>
</Page>
